<p id="notice"><%= notice %></p>

<div class="content">
<h3>Rent</h3>

<p>
  <strong>Car</strong>
  <%= @car&.category&.name %> 
</p>

<p>
  <strong>Name:</strong>
  <%= @car.name %> 
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@car&.price, precision: 2) %> 
</p>

<p>
  <strong>Rented:</strong>
  <%= @car.rented %> 
</p>

<p>
 <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <div class="row align-items-center">
      <div class="card shadow-sm" >
        <div class="car-image">
          <img alt="image" class="bd-placeholder-img card-img-top" src="<%= image_path(@car&.url_image) %>">
        </div>

        <div class="card-body">
          <p class="card-text"></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</p>


<%= link_to 'Edit', edit_admin_car_path(@car), class: "btn btn-outline-primary btn-sm" %> |
<%= link_to 'Back', admin_cars_path, class: "btn btn-primary btn-sm" %>

</div>



