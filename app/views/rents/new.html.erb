<%= render '/home/header' %>

<main>
  <%= form_for(@rent) do |f| %>
    <%= f.hidden_field :car_id, value: @car.id %>
    <% if @rent.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@rent.errors.count, "error") %> prohibited this rent from being saved:</h2>
        <ul>
          <% @rent.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <div>
    <% end %>
  
    <div class="container">
      <div class="row align-items-center">
        <div class="col">
          <div class="card shadow-sm" >
              <div class="car-image">
                <img alt="image" class="bd-placeholder-img card-img-top" src="<%= image_path(@car&.url_image) %>">
              </div>

              <div class="card-body">
                <p class="card-text"><%= @car&.name %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%# <button type="button" class="btn btn-sm btn-outline-secondary">Reserve</button> %>
                    <%#= link_to "Reserve", new_rent_path(car_id: @car&.id), class: 'btn btn-sm btn-outline-secondary'  %>
                  </div>
                  <small class="text-muted"><%= number_to_currency(@car.price, precision: 2) %></small>
                </div>
              </div>
            </div>
        </div>
        <div class="col">

          <div class="field">
            <%= f.label :name, class: 'label'  %>
            <div class="control">
              <%= f.text_field :name, class: "input"  %>
            </div>
          </div>

          <div class="field">
            <%= f.label :date_start, class: 'label'  %>
            <div class="control">
              <%= f.date_field :date_start, class: "input"  %>
            </div>
          </div>    

          <div class="field">
            <%= f.label :date_end, class: 'label'  %>
            <div class="control">
              <%= f.date_field :date_end, class: "input"  %>
            </div>
          </div>          

          <div class="field is-grouped">
            <div class="control">
              <%= f.submit "Rent", class: 'btn btn-primary' %>
              <%= link_to 'Back', root_path, class: 'btn btn-light' %>
            </div>
          </div>
        </div>
      </div>
    </div>
   

  <% end %>
</main>


<%= render '/home/footer' %>

<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>