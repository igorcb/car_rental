  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      
      <% @cars.each do |car| %>
        
        <div class="col">
          <div class="card shadow-sm" >
            <div class="car-image">
              <img alt="image" class="bd-placeholder-img card-img-top" src="<%= image_path(car&.url_image) %>">
            </div>

            <div class="card-body">
              <p class="card-text"><%= car&.name %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%# <button type="button" class="btn btn-sm btn-outline-secondary">Reserve</button> %>
                  <%= link_to "Reserve", new_rent_path(car_id: car&.id), class: 'btn btn-sm btn-outline-secondary'  %>
                </div>
                <small class="text-muted"><%= number_to_currency(car.price, precision: 2) %></small>
              </div>
            </div>
          </div>
        </div>

      <% end %>

      </div>
    </div>
  </div>
